{{>layout/header}}

<h1>휴가신청</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                {{#userVacation}}
                <input type="hidden" id="uid" value={{uid}}>
                    잔여 연차: <span id="remainDays">{{remainDays}}</span>
                {{/userVacation}}
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
            {{/userName}}
            <button type="button" class="btn btn-primary" id="btn-go-save">신청</button>
        </div>
    </div>
</div>
<br>
<!-- 목록 출력 영역 -->
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th style="display:none">ID</th>
        <th>유형</th>
        <th>시작일</th>
        <th>종료일</th>
        <th>사용일수</th>
        <th>비고</th>
        <th></th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#vacations}}
        <tr>
            <td style="display:none">{{id}}</td>
            <td>{{type}}</td>
            <td>{{startDate}}</td>
            <td>{{endDate}}</td>
            <td>{{useDay}}</td>
            <td>{{comment}}</td>
            <td><button type="button" class="btn btn-primary" name="btn-cancel">취소</button></td>
        </tr>
    {{/vacations}}
    </tbody>
</table>
{{>layout/footer}}